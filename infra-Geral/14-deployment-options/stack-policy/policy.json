{
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "Update:*",
            "Principal": "*",
            "Resource": "*"
        },
        {
            "Effect": "Deny",
            "Action": ["Update:Replace", "Update:Delete"],
            "Principal": "*",
            "Resource": "LogicalResourceId/MyDDBTable",
            "Condition": {
                "StringEquals": {
                    "ResourceType": ["AWS::DynamoDB::Table"]
                }
            }
        }
    ]
}